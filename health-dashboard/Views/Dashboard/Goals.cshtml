@using System.Globalization;

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h1 class="box-title">Add a Personal Goal</h1>
            </div>
            <div class="card-body">
                @if (Model.Message != null)
                {
                    <div>
                        @Model.Message
                    </div>
                }
                <form method="post" action="#">
                    <div class="form-group">
                        <label class="form-control-label" for="activity-type">
                            Activity Type<span class="required">*</span>
                        </label>
                        <select id="activity-type" name="activity-type" class="form-control" required="required">
                            <option value="" label="Choose an Activity Type..."></option>
                            @foreach (var at in Model.ActivityTypes)
                            {
                                <option value="@at.Id">@at.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="target">
                            Target
                        </label>
                        <input type="number" id="target" name="target" class="form-control" value="0">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Goal Metric</label>
                        <select id="activity-type" name="activity-type" class="form-control" required="required">
                            <option value="" label="Choose a Goal Metric..."></option>
                            <option value="Calories">Calories Burnt</option>
                            <option value="StepsTaken">Steps</option>
                            <option value="MetresTravelled">Metres Travelled</option>
                            <option value="MetresElevationGained">Metres Elevation Gained</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="start-time">
                            Start Time
                        </label>
                        <input type="datetime-local" id="start-time" name="start-time" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="end-time">
                            End Time
                        </label>
                        <input type="datetime-local" id="end-time" name="end-time" class="form-control" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-ddTHH:mm:ss")" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")">
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-5">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h2 class="box-title">Your Goals</h2>
            </div>
            <div class="card-body">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Activity Type</th>
                            <th>Amount Completed</th>
                            <th>Required</th>
                            <th>Time Period</th>
                            <th>Delete Goal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ch in Model.Challenges)
                        {
                            <tr>
                                <td>@ch.activity.activityName</td>
                                <td>@(Math.Floor((double)((int)ch.goal * (int)ch.percentComplete / 100))) @ch.goalMetric</td>
                                <td>@ch.goal @ch.goalMetric</td>
                                <td>@(DateTime.Parse((string)ch.startDateTime, CultureInfo.InvariantCulture).ToString()) - @(DateTime.Parse((string)ch.endDateTime, CultureInfo.InvariantCulture).ToString())</td>
                                <td><div class="goal-delete-message" data-id="@ch.challengeId"></div><a href="#" class="goal-delete-ajax" data-id="@ch.challengeId">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        jQuery(document).ready(function () {
            jQuery('.goal-delete-ajax').click(function (event) {
                if (window.confirm("Are you sure you wish to delete that goal?")) {
                    event.preventDefault();
                    var link = jQuery(this);

                    jQuery.ajax({
                        type: 'POST',
                        url: '@Url.Action("GoalDeleteAjax", "Dashboard")' + '/' + link.data("id"),
                        success: function (data, textStatus, jqXHR) {
                            jQuery('.goal-delete-message[data-id=' + link.data("id") + ']').html("<p>Goal deleted successfully.</p>");
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            jQuery('.goal-delete-message[data-id=' + link.data("id") + ']').html("<p>Deletion failed</p>");
                            console.log('.goal-delete-message[data-id=' + link.data("id") + ']')
                            setTimeout(function () {
                                jQuery('.goal-delete-message[data-id=' + link.data("id") + ']').html("");
                            }, 3000);
                        }
                    });
                }
            });

            jQuery('.standardSelect').chosen({
                disable_search_threshold: 10,
                no_results_text: "Oops, nothing found!",
                width: "100%"
            });
        });
    };
</script>
